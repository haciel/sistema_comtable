<style>
    .text-center {
        text-align: center;
    }
    .text-right{
        text-align: right;
    }

    td {
        line-height: 2px;
    }
</style>
<h3 class="text-center">ESTADO DE RESULTADOS</h3>
<h3 class="text-center">EMPRESA {{ company.name }}</h3>
<span class="text-center">
    Desde {{ desde }} Hasta {{ hasta }}
</span>

<br>
<br>
<table border="1px">
    <tbody>
    <tr>
        <td> Código</td>
        <td colspan="2"> Cuenta</td>
        <td> Saldo Final</td>
    </tr>
    {% set saldo=0 %}
    {% for cuenta in cuentas %}
        <tr>
            <td> {{ cuenta.code }}</td>
            <td colspan="2"> {{ cuenta.name }}</td>
            <td class="text-right">{{ cuenta.valor }} </td>
            {% set saldo = saldo + cuenta.valor %}
        </tr>
    {% endfor %}
    <tr>
        <td colspan="3">
            {% if saldo>0 %}
                Utilidad del ejercicio
            {% else %}
            Pérdida del ejercicio
            {% endif %}
        </td>
        <td class="text-right">{{ saldo }} </td>
    </tr>
    </tbody>
</table>

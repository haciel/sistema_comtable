{% extends 'FrontendBundle::frontend_base.html.twig' %}
{% import 'FrontendBundle:Macros:macro_breadcrumb.html.twig' as macroBreadcrumb %}

{% block content %}
    {% set username = app.user.name is defined ? app.user.name : app.user.username %}
    <div class="container">
        <section class="content-header text-center">
            <h1 class="text-success">
                Reportes Contables
            </h1>
        </section>
        <section class="content">
            <div class="box box-success">
                <div class="row">
                    <div class="col-sm-12">
                        {{ macroBreadcrumb.RenderBreadCrumbs(breadcrumb) }}
                        <a href="{{ close }}" class="close btn-close" >&times;</a>
                        <div class="box-body">
                            <div class="box-header text-center">
                                <h3>
                                    <b>Empresa:</b> {{ empresa.name }}
                                </h3>
                            </div>
                            <div class="well flat">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <a class="btn btn-white btn-full"> Libro Diario</a>
                                    </div>
                                    <div class="col-sm-4">
                                        <a class="btn btn-primary btn-full"> Libro Mayor</a>
                                    </div>
                                    <div class="col-sm-4">
                                        <a class="btn btn-warning btn-full">Balance de Comprobación</a>
                                    </div>
                                </div>
                                <div class="row padding-top-20">
                                    <div class="col-sm-4">
                                        <a class="btn btn-info btn-full"> Estado de Resultados</a>
                                    </div>
                                    <div class="col-sm-4">
                                        <a class="btn btn-danger btn-full"> Estado de Situación</a>
                                    </div>
                                    <div class="col-sm-4">
                                        <a class="btn btn-success btn-full">Plan de Cuentas</a>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

{% endblock %}
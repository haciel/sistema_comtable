{% extends '@Backend/CRUD/list.html.twig' %}
{% block create_new_path path('answerTask_new') %}
{% block create_new_title 'answerTask.create_new'|trans %}
{% block list_body %}
    <table id="datatable" class="table table-bordered table-striped">
        <thead>
        {% block thead %}
            <tr>
                <th>#</th>
                <th>{{ 'answerTask.userId'|trans|title }}</th>
                <th>{{ 'answerTask.taskId'|trans|title }}</th>
                <th>{{ 'backend.action'|trans|title }}</th>
            </tr>
        {% endblock %}
        </thead>
        <tfoot>
        {{ block('thead') }}
        </tfoot>
        <tbody>
        {% for answerTask in answerTasks %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ answerTask.userId }}</td>
                <td>{{ answerTask.taskId }}</td>
                <td class="action">
                    <div class="btn-group">
                        <div class="btn-group">
                            <a class="btn btn-sm btn-primary flat" href="{{ path('answerTask_show', { 'id': answerTask.id }) }}">
                                <i class="fa fa-eye"></i>
                            </a>
                        </div>
                        <div class="btn-group">
                            <a class="btn btn-sm btn-success flat" href="{{ path('answerTask_edit',{'id':answerTask.id}) }}"><i
                                        class="fa fa-pencil"></i></a>
                        </div>
                        {% form_theme delete_forms[answerTask.id] 'BackendBundle:CRUD:delete.html.twig' %}
                        <div class="btn-group">
                            {{ form(delete_forms[answerTask.id]) }}
                        </div>
                    </div>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}